{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["vite/client"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* âœ… Alias settings */
    "ignoreDeprecations": "5.0",
    "baseUrl": ".",
    "paths": {
      "#api/*": ["src/api/*"],
      "#assets/*": ["src/assets/*"],
      "#components/*": ["src/components/*"],
      "#components/Auth/*": ["src/components/Auth/*"],
      "#components/Exams/*": ["src/components/Exams/*"],
      "#components/HomeCare/*": ["src/components/HomeCare/*"],
      "#components/Medications/*": ["src/components/Medications/*"],
      "#components/PatientList/*": ["src/components/PatientList/*"],
      "#components/Procedures/*": ["src/components/Procedures/*"],
      "#components/ReportForm/*": ["src/components/ReportForm/*"],
      "#components/pdf/*": ["src/components/ReportForm/pdf/*"],
      "#components/Specialists/*": ["src/components/Specialists/*"],
      "#context/*": ["src/context/*"],
      "#fonts/*": ["src/fonts/*"],
      "#hooks/*": ["src/hooks/*"],
      "#layouts/*": ["src/layouts/*"],
      "#pages/*": ["src/pages/*"],
      "#router/*": ["src/router/*"],
      "#types/*": ["src/types/*"]
    }
  },
  "include": ["src"]
}
